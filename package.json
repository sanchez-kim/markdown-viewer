{
  "name": "markdown-viewer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "src/electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite dev --port 3080",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "electron": "npm run build && find build -name '*.html' -o -name '*.js' | xargs sed -i '' -e 's|href=\"/|href=\"./|g' -e 's|import(\"/|import(\"./|g' && electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3081 && NODE_ENV=development electron .\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.11.2",
    "jspdf": "^3.0.2",
    "marked": "^16.2.0",
    "puppeteer": "^24.17.0",
    "puppeteer-core": "^24.17.0"
  },
  "build": {
    "appId": "com.sanchez-kim.markdown-viewer",
    "productName": "Markdown Viewer",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "src/electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "static/favicon.png"
    },
    "win": {
      "icon": "static/favicon.png"
    },
    "linux": {
      "category": "Office",
      "icon": "static/favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
